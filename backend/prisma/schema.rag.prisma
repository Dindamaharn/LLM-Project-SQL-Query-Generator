generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/rag-client"
}

datasource db {
  provider = "postgresql"
  url      = env("RAG_DATABASE_URL") // fixed: rag_db
  schemas  = ["rag"]
}

model KnowledgeBaseEmbeddingBGE {
  id        Int      @id @default(autoincrement())
  domain    String
  title     String
  content   String
  model     String
  createdAt DateTime @default(now())
  embedding Unsupported("vector")

  @@schema("rag")
}

model KnowledgeBaseEmbeddingNomic {
  id        Int      @id @default(autoincrement())
  domain    String
  title     String
  content   String
  model     String
  createdAt DateTime @default(now())
  embedding Unsupported("vector")

  @@schema("rag")
}