generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // dinamis, tergantung RS
}

datasource rag {
  provider = "postgresql"
  url      = env("RAG_DATABASE_URL") // fixed ke rag_db
  schemas  = ["rag"]
}

model KnowledgeBaseEmbeddingBGE {
  id        Int      @id @default(autoincrement())
  domain    String
  title     String
  content   String
  model     String
  createdAt DateTime @default(now())
  embedding Unsupported("vector")

  @@schema("rag")
}

model KnowledgeBaseEmbeddingNomic {
  id        Int      @id @default(autoincrement())
  domain    String
  title     String
  content   String
  model     String
  createdAt DateTime @default(now())
  embedding Unsupported("vector")

  @@schema("rag")
}
